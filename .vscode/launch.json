	"version": "0.2.0",
	"configurations": [
        {
            "preLaunchTask": "k3s multipass",
            "name": "k3s multipass",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${env:HOME}/go/src/github.com/Fred78290/kubernetes-cloud-autoscaler",
            "args": [
                "--request-timeout=120s",
                "--use-vanilla-grpc",
				"--distribution=k3s",
				"--provider=multipass",
                "--listen=unix:/tmp/autoscaler.sock",
				"--machines=${workspaceFolder}/.config/multipass/desktop-ca-k8s/machines.json",
				"--provider-config=${workspaceFolder}/.config/multipass/desktop-ca-k8s/provider.json",
                "--config=${workspaceFolder}/.config/multipass/desktop-ca-k8s/autoscaler.json",
                "--save=${workspaceFolder}/.config/multipass/desktop-ca-k8s/state.json",
                "--kubeconfig=${workspaceFolder}/.config/multipass/desktop-ca-k8s/config",
                "--log-level=info"
            ]
        },
